<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.golek.conaobiad">

    <application
        android:name="biz.golek.whattodofordinner.WhatToDoForDinnerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="biz.golek.whattodofordinner.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="co_na_obiad.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <!-- <meta-data android:name="QUERY_LOG" android:value="true" /> -->
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="golek.biz" />

        <activity
            android:name="biz.golek.whattodofordinner.view.activities.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>
