<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.golek.whattodofordinner">

    <application
        android:name=".WhatToDoForDinnerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.AddNewDinnerActivity"
            android:label="@string/title_activity_add_new_dinner" />
        />
        <activity
            android:name=".view.activities.EditDinnerActivity"
            android:label="@string/title_activity_edit_dinner" />
        />
        <activity
            android:name=".view.activities.DinnerListActivity"
            android:label="@string/title_activity_dinner_list" />
        />
        <activity
            android:name=".view.activities.GeneratePromptsPreferencesActivity"
            android:label="@string/title_activity_generate_prompts_preferences" />
        />
        <activity
            android:name=".view.activities.PromptsActivity"
            android:label="@string/title_activity_prompts" />
        <activity android:name=".view.activities.DinnerChosenActivity"></activity>
    </application>

</manifest>
